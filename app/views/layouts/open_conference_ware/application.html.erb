  <link rel='stylesheet' id='athemes-glyphs-css'  href='http://igniteportland.org/wp-content/themes/hiero/css/athemes-glyphs.css?ver=3.6' type='text/css' media='all' />
  <link rel='stylesheet' id='bootstrap-css'  href='http://igniteportland.org/wp-content/themes/hiero/css/bootstrap.min.css?ver=3.6' type='text/css' media='all' />
  <link rel='stylesheet' id='athemes-style-css'  href='http://igniteportland.org/wp-content/themes/hiero/style.css?ver=3.6' type='text/css' media='all' />
  <link rel="stylesheet" id="custom-css-css" type="text/css" href="http://igniteportland.org/?custom-css=1&#038;csblog=5&#038;cscache=6&#038;csrev=9" />
  <style>
    label { 
      display: inline; 
      font-weight: bold;
    }
  </style>

  <%= javascript_include_tag 'open_conference_ware/application' %>

  <%= auto_discovery_link_tag(:atom, proposals_path(:format => :atom), :title => "#{OpenConferenceWare.organization}: Proposals feed") %>
