  </div>
<!-- #masthead --></header>

  <div id="main" class="site-main">
    <div class="clearfix container">
      <div id="primary" class="content-area">
        <div id="content" class="site-content" role="main">
          <div id="breadcrumbs">
            <% if @breadcrumbs %>
              <% @breadcrumbs.each_with_index do |breadcrumb, i| %>
                <% txt, path = breadcrumb %>
                <% if i > 0 %>
                  &#187;
                <% end %>
                <%= link_to(h(txt), path) %>
              <% end %>
            <% end %>
          </div>

          <header class="entry-header">
            <h1 class="entry-title"><%= page_title %></h1>
          </header>
          <div class="clearfix entry-content">
            <%# flash[:success] = "This test is for testing the notifications." %>
            <%# flash[:failure] = "This test is for testing the notifications." %>
            <%# flash[:notice] = "This test is for testing the notifications." %>
            <%= notice %>
            <%= yield %>
          </div>
        </div>
      </div>

      <div class="site-sidebar widget-area" role="complementary">
        <aside id="login-as" class="widget">
          <% if logged_in? %>
            <h3 class="widget-title">Signed in as</h3>
            <ul>
              <li><b><%= current_user.label %></b></li>
              <% if admin? %>
                <li><%= link_to "Manage events", manage_events_path %></li>
                <li><%= link_to "Manage snippets", manage_snippets_path %></li>
                <li><%= link_to "Manage comments", comments_path %></li>
                <% if @event %>
                  <li><%= link_to "Export CSV", "/events/#{@event.id}/proposals.csv" %></li>
                <% end %>
              <% end %>
              <li><%= link_to "Sign out", sign_out_path %></li>
            </ul>
          <% else %>
            <h3 class="widget-title">Sign In</h3>
            <ul>
              <li><%= link_to "<b>Sign in</b> to manage your proposals".html_safe, sign_in_path %></li>
            </ul>
          <% end %>
        </aside>

        <aside id="subscribe-to" class="widget">
          <h3 class="widget-title">Subscribe to</h3>
          <ul>
            <li><%= link_to "<span class='feedable'>Proposals feed</span>".html_safe, proposals_path(:format => :atom) %></li>
            <% if admin? %>
              <li><%= link_to "<span class='feedable'>Comments feed</span>".html_safe, comments_path(:format => :atom, :secret => OpenConferenceWare::CommentsController::SECRET) %></li>
            <% end %>
          </ul>
        </aside>

        <aside id="proposals-for" class="widget">
          <h3 class="widget-title">Proposals for</h3>
          <ul>
            <% if @events.blank? %>
              <li class="empty-text">&mdash; No events &mdash;</li>
            <% else %>
              <% for event in @events %>
                <li><%= link_to event.title, event_proposals_path(event) %></li>
              <% end %>
            <% end %>
          </ul>
        </aside>
      </div><!-- #sidebar-1 -->
    </div><!-- .content -->
  </div><!-- Close Page -->

  <% if Rails.env.production? %>
    <!--
    Google Analytics Plugin for Wordpress and BBPress
    http://boakes.org/analytics
    -->
    <script src="http://www.google-analytics.com/urchin.js" type="text/javascript">
    </script>
    <script type="text/javascript">
    //<![CDATA[
    _uacct = "UA-100805-10";
    urchinTracker();
    //]]>
    </script>
  <% end %>

  <!-- arbitrary javascript from views -->
  <script type="text/javascript">
    <%= yield :javascript %>
  </script>
</body>
</html>
